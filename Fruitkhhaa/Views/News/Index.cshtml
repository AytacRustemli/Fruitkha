	
@model HomeVM

	<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>@Model.Organic.Title</p>
						<h1>@Model.Organic.Description</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- latest news -->
	<div class="latest-news mt-150 mb-150">
		<div class="container">
			<div class="row">
				@foreach (var item in Model.News )
				{
					<div class="col-lg-4 col-md-6">
					<div class="single-latest-news">
						<a href="/article/index/@item.Id"><div class="latest-news-bg news-bg-1"></div></a>
						<div class="news-text-box">
							<h3><a href="/article/index/@item.Id">@item.Title</a></h3>
							<p class="blog-meta">
								<span class="author"><i class="fas fa-user"></i>@item.User.UserName</span>
								<span class="date"><i class="fas fa-calendar"></i>@item.PublishDate.ToString("dd MM yyyy")</span>
							</p>
							<p class="excerpt">@item.Description</p>
							<a href="article/index/@item.Id" class="read-more-btn">read more <i class="fas fa-angle-right"></i></a>
						</div>
					</div>
				</div>
				}			
			</div>
			<div class="row">
				<div class="container">
					<div class="row">
						<div class="col-lg-12 text-center">
							<div class="pagination-wrap">
								<ul>
									<li><a href="#">Prev</a></li>
									<li><a href="#">1</a></li>
									<li><a class="active" href="#">2</a></li>
									<li><a href="#">3</a></li>
									<li><a href="#">Next</a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end latest news -->

	<!-- logo carousel -->
	<div class="logo-carousel-section">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="logo-carousel-inner">
						@foreach (var item in Model.Photos)
						{
							<div class="single-logo-item">
								<img src="@item.PhotoURL" alt="">
							</div>
						}
						
						
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end logo carousel -->
